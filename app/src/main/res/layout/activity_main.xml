<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="me.mi.milab.MainActivity"
    android:background="#fff4f4f4">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                android:textColor="#333333"/>
            <me.mi.milab.view.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:border_color="#ffff0000"
                android:src="@mipmap/icon"/>
            <me.mi.milab.view.MyView
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <me.mi.milab.view.ButtonRectangle
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <me.mi.milab.view.Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="49dp"
                android:background="@drawable/round_corner_solid_ffff9500_stroke_fffcb925_radius_20"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
